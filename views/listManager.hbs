                    }
                }
            ];

            for (const format of dateFormats) {
                const match = listName.match(format.regex);
                if (match) {
                    const date = format.handler(match);
                    if (date && !isNaN(date.getTime())) {
                        // Return as YYYY-MM-DD in local timezone
