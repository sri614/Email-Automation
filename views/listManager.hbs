                }

                console.log('\n=== Include Lists Results ===');
                console.log(`Successful: ${successCount}`);
                console.log(`Failed: ${errorCount}`);

                if (successCount > 0 && errorCount === 0) {
                    showNotification(`‚úÖ All ${successCount} lists have been included in their emails`, 'success');
                } else if (successCount > 0 && errorCount > 0) {
                    showNotification(`‚ö†Ô∏è ${successCount} succeeded, ${errorCount} failed. Check console for details.`, 'warning');
                } else if (errorCount > 0) {
                    showNotification(`‚ùå Failed to include lists. Check console for details.`, 'error');
                }

            } catch (error) {
                console.error('Error in includeListsInEmails:', error);
                showNotification(`Error including lists in emails: ${error.message}`, 'error');
            }
        }

