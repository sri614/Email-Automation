                date1.getDate() === date2.getDate();
        }

        // Format date for display
        function formatDate(date) {
            if (!date) return 'No date';

            return new Date(date).toLocaleDateString('en-US', {
                weekday: 'short',
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

